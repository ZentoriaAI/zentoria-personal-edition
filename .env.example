# Zentoria Personal Edition - Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# ===========================================
# PostgreSQL Database
# ===========================================
POSTGRES_USER=zentoria
POSTGRES_PASSWORD=change_this_secure_password
POSTGRES_DB=zentoria_main

# Full database URL (used by application services)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}?schema=public

# ===========================================
# Redis
# ===========================================
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=

# ===========================================
# MinIO Object Storage
# ===========================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=change_this_secure_password
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_ACCESS_KEY=${MINIO_ROOT_USER}
MINIO_SECRET_KEY=${MINIO_ROOT_PASSWORD}
MINIO_BUCKET=zentoria-files
MINIO_USE_SSL=false

# ===========================================
# JWT Authentication
# ===========================================
# Generate with: openssl rand -base64 32
JWT_SECRET=change_this_to_a_secure_32_char_minimum_secret
JWT_ISSUER=zentoria-auth
JWT_AUDIENCE=zentoria-mcp

# ===========================================
# n8n Workflow Automation (Optional)
# ===========================================
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=change_this_secure_password

# ===========================================
# Application Settings
# ===========================================
NODE_ENV=development
LOG_LEVEL=debug
CORS_ORIGIN=http://localhost:3000

# ===========================================
# Service Ports
# ===========================================
MCP_GATEWAY_PORT=4000
MCP_GATEWAY_WS_PORT=4001
AI_ORCHESTRATOR_PORT=5000
FRONTEND_PORT=3000
N8N_PORT=5678

# ===========================================
# AI Orchestrator
# ===========================================
OLLAMA_BASE_URL=http://host.docker.internal:11434
OLLAMA_CHAT_MODEL=llama3.2:8b
OLLAMA_CODE_MODEL=codellama:7b
OLLAMA_EMBED_MODEL=nomic-embed-text

# ===========================================
# Qdrant Vector DB
# ===========================================
QDRANT_URL=http://qdrant:6333
QDRANT_COLLECTION=zentoria_docs

# ===========================================
# External URLs (for webhooks, callbacks)
# ===========================================
BASE_URL=http://localhost:4000
WEBHOOK_URL=http://localhost:5678
