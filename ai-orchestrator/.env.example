# Zentoria AI Orchestrator Configuration
# Copy this file to .env and update with your values

# Application
APP_NAME=Zentoria AI Orchestrator
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8080
WORKERS=1
RELOAD=true

# Ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_CHAT_MODEL=llama3.2:8b
OLLAMA_CODE_MODEL=codellama:7b
OLLAMA_EMBED_MODEL=nomic-embed-text
OLLAMA_TIMEOUT=120.0
OLLAMA_MAX_TOKENS=4096

# Qdrant
QDRANT_URL=http://10.10.40.119:6333
# QDRANT_API_KEY=your-api-key
QDRANT_COLLECTION=zentoria_docs
QDRANT_EMBEDDING_SIZE=768

# Redis
REDIS_URL=redis://10.10.40.110:6379
# REDIS_PASSWORD=your-password
REDIS_DB=0
REDIS_CONVERSATION_TTL=3600
REDIS_MAX_HISTORY=50

# Redis TLS (SEC-008)
# Set REDIS_TLS=true or use rediss:// URL to enable TLS
REDIS_TLS=false
# Path to CA certificate (optional, for custom CA)
# REDIS_TLS_CA_CERT=/path/to/ca.crt
# Client certificate for mutual TLS (optional)
# REDIS_TLS_CERT=/path/to/client.crt
# REDIS_TLS_KEY=/path/to/client.key
# Set to false to allow self-signed certs (dev only, insecure)
REDIS_TLS_VERIFY=true

# Backend MCP
MCP_BASE_URL=http://10.10.40.101:4000
# MCP_API_KEY=your-api-key
MCP_TIMEOUT=30.0

# RAG
RAG_TOP_K=5
RAG_SCORE_THRESHOLD=0.7
RAG_CHUNK_SIZE=512
RAG_CHUNK_OVERLAP=50

# Agents
AGENT_TIMEOUT=60.0
AGENT_MAX_RETRIES=3
AGENT_RETRY_DELAY=1.0

# Security
# ORCHESTRATOR_API_KEY=your-api-key
CORS_ORIGINS=["*"]
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=console
